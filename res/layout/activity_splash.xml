<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/final_mountian"
    >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:text="@string/track_your_trip_route"
        android:textSize="32sp"
        android:textColor="#000000"
        />
    
    <ProgressBar 
        android:id="@+id/pb_splash_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        />
    
    <ImageView 
        android:id="@+id/iv_run_tracker_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/pb_splash_download"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_run_tracker"
        />

</RelativeLayout>
